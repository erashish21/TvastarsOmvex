@model TvastarsOmvex.Models.Product
@{
    ViewData["Title"] = "Add Product";
    var categories = ViewBag.Categories as List<TvastarsOmvex.Models.Category>;
}

<div class="container mt-5">
    <h2 class="mb-4">Add Product</h2>

    <form asp-action="Create" method="post" class="shadow p-4 bg-light rounded">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter product name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">-- Select Category --</option>
                @foreach (var c in categories)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ShortDescription" class="form-label"></label>
            <textarea asp-for="ShortDescription" class="form-control" rows="2"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="LongDescription" class="form-label"></label>
            <textarea asp-for="LongDescription" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="ImagePath" class="form-label">Image Path</label>
            <input asp-for="ImagePath" class="form-control" placeholder="/images/products/example.jpg" />
        </div>

        <div class="mb-3">
            <label asp-for="DatasheetPath" class="form-label">Datasheet Path (optional)</label>
            <input asp-for="DatasheetPath" class="form-control" placeholder="/files/datasheet.pdf" />
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">Save Product</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
