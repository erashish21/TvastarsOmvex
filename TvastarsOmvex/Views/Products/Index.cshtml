@model IEnumerable<TvastarsOmvex.Models.Product>
@{
    ViewData["Title"] = "Products";
    var categories = ViewBag.Categories as List<TvastarsOmvex.Models.Category>;
}

<div class="container mt-5">
    @* <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Products</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fa fa-plus"></i> Add Product
        </a>
    </div> *@

    <!-- 🔍 Search & Filter -->
    <form method="get" class="d-flex justify-content-between mb-4">
        <div class="d-flex">
            <select name="categoryId" class="form-select me-2" style="width:220px" onchange="this.form.submit()">
                <option value="">All Categories</option>
                @if (categories != null)
                {
                    foreach (var c in categories)
                    {
                     <option value="@c.Id" selected="@(Context.Request.Query["categoryId"] == c.Id.ToString())">@c.Name</option>
                    }
                }
            </select>

            <input type="text" name="search" value="@Context.Request.Query["search"]"
       class="form-control" placeholder="Search products..." style="width:220px" />

        </div>

        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
    </form>

    <!-- 🧾 Product Cards -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            No products found.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var p in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@p.ImagePath" alt="@p.Name" class="card-img-top rounded-top"
                             style="height:220px;object-fit:cover" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@p.Name</h5>
                            <p class="text-muted small mb-1">@p.ShortDescription</p>

                            <p class="text-secondary small mb-2">
                                <i class="fa fa-layer-group text-primary"></i>
                                @p.Category?.Name
                            </p>

                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fa fa-info-circle"></i> View Details
                                </a>

                                <a asp-controller="Contact" asp-action="Create" asp-route-productName="@p.Name"
                                   class="btn btn-primary btn-sm ms-2">
                                    <i class="fa fa-envelope"></i> Enquire
                                </a>

                               @*  <a asp-action="Delete" asp-route-id="@p.Id"
                                   onclick="return confirm('Are you sure you want to delete this product?');"
                                   class="btn btn-danger btn-sm ms-2">
                                    <i class="fa fa-trash"></i>
                                </a> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
