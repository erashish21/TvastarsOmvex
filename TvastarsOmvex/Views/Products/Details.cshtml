@model TvastarsOmvex.Models.Product
@{
    ViewData["Title"] = Model.Name;
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-7">
            <img src="@Model.ImagePath" class="img-fluid rounded mb-3" />
            <h3>@Model.Name</h3>
            <p>@Model.LongDescription</p>
        </div>
        <div class="col-md-5">
            <form asp-controller="Contact" asp-action="Index" method="post">
                <h5>Send Enquiry</h5>
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <div class="mb-2"><input class="form-control" name="Name" placeholder="Your Name" /></div>
                <div class="mb-2"><input class="form-control" name="Email" placeholder="Your Email" /></div>
                <div class="mb-2"><input class="form-control" name="Phone" placeholder="Phone" /></div>
                <div class="mb-2"><textarea class="form-control" name="Message" rows="4" placeholder="Message"></textarea></div>
                <button class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>
