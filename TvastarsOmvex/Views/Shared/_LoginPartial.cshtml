@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <span class="text-dark me-2">Hello, @UserManager.GetUserName(User)!</span>
        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
    </form>
}
else
{
    <a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="btn btn-primary btn-sm ms-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
}
