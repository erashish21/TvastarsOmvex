@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">About Tvastars Omvex</h1>
        <p class="text-muted">Innovating Industrial Automation with Smart, Sustainable, and Reliable Engineering.</p>
    </div>

    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <img src="/images/about/about-team.png" class="img-fluid rounded shadow-sm" alt="Our Team" />
        </div>
        <div class="col-md-6">
            <h3 class="fw-bold text-secondary">Who We Are</h3>
            <p>
                Tvastars Omvex is a leading industrial automation and engineering solutions company
                specializing in smart material handling, process automation, and warehouse systems.
                We combine innovation, precision, and reliability to help industries achieve higher
                efficiency and lower operational costs.
            </p>
            <p>
                From concept design to manufacturing and installation, we deliver complete turnkey
                automation projects powered by cutting-edge technology and expert engineering.
            </p>
        </div>
    </div>

    <div class="row align-items-center mb-5 flex-md-row-reverse">
        <div class="col-md-6">
            <img src="/images/about/about-mission.jpg" class="img-fluid rounded shadow-sm" alt="Our Mission" />
        </div>
        <div class="col-md-6">
            <h3 class="fw-bold text-secondary">Our Mission</h3>
            <p>
                Our mission is to empower industries with smart automation systems that enhance
                productivity, safety, and sustainability. We focus on creating tailored solutions
                that align with our clients' business goals and operational needs.
            </p>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4 text-center">
            <i class="fa fa-gears fa-3x text-primary mb-3"></i>
            <h5 class="fw-bold">Engineering Excellence</h5>
            <p>Precision-driven designs that ensure long-lasting performance and safety.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fa fa-lightbulb fa-3x text-warning mb-3"></i>
            <h5 class="fw-bold">Innovation</h5>
            <p>Bringing automation and technology together for smarter manufacturing.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="fa fa-people-group fa-3x text-success mb-3"></i>
            <h5 class="fw-bold">Customer Focus</h5>
            <p>Delivering solutions built around our customers’ success and satisfaction.</p>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="/Contact" class="btn btn-primary btn-lg">
            <i class="fa fa-envelope"></i> Get in Touch
        </a>
    </div>
</div>
