@{
    ViewData["Title"] = "Services";
    var flowcode = ViewBag.Flowcode as List<TvastarsOmvex.Models.Product>;
    var quadphase = ViewBag.Quadphase as List<TvastarsOmvex.Models.Product>;
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2>Our Services</h2>
        <p class="text-muted">We provide complete automation, integration, and industrial solutions.</p>
    </div>

    <!-- FLOWCODE SERVICES -->
    <section class="mb-5">
        <h3 class="text-primary mb-4 text-center">FLOWCODE – Automation Software & Control</h3>
        <div class="row">
            @if (flowcode != null && flowcode.Any())
            {
                @foreach (var s in flowcode)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@s.ImagePath" alt="@s.Name" class="card-img-top" style="height:220px;object-fit:cover;" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-primary">@s.Name</h5>
                                <p class="small text-muted">@s.ShortDescription</p>
                                <div class="mt-auto">
                                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fa fa-info-circle"></i> View Details
                                    </a>
                                    <a asp-controller="Enquiry" asp-action="Index" asp-route-productName="@s.Name"
                                       class="btn btn-primary btn-sm ms-2">
                                        <i class="fa fa-envelope"></i> Enquire
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted text-center">No FLOWCODE services found.</p>
            }
        </div>
    </section>

    <!-- QUADPHASE SERVICES -->
    <section>
        <h3 class="text-success mb-4 text-center">QUADPHASE – System Integration & Relocation</h3>
        <div class="row">
            @if (quadphase != null && quadphase.Any())
            {
                @foreach (var s in quadphase)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@s.ImagePath" alt="@s.Name" class="card-img-top" style="height:220px;object-fit:cover;" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-success">@s.Name</h5>
                                <p class="small text-muted">@s.ShortDescription</p>
                                <div class="mt-auto">
                                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-outline-success btn-sm">
                                        <i class="fa fa-info-circle"></i> View Details
                                    </a>
                                    <a asp-controller="Enquiry" asp-action="Index" asp-route-productName="@s.Name"
                                       class="btn btn-success btn-sm ms-2">
                                        <i class="fa fa-envelope"></i> Enquire
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted text-center">No QUADPHASE services found.</p>
            }
        </div>
    </section>
   

</div>
