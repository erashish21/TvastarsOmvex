@model TvastarsOmvex.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Category?.Name</p>
            <p>@Model.LongDescription</p>
            <a asp-controller="Enquiry" asp-action="Index" asp-route-productName="@Model.Name"
               class="btn btn-primary mt-3">
                <i class="fa fa-envelope"></i> Enquire Now
            </a>
        </div>
    </div>
</div>
