@{
    ViewData["Title"] = "Contact";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Contact Us</h2>
        <p class="text-muted">We’d love to hear from you. Get in touch with us for inquiries or assistance.</p>
    </div>

    @if (ViewBag.Success == true)
    {
        <div class="alert alert-success text-center" role="alert">
            ✅ Thank you! We’ve received your message and will get back to you soon.
        </div>
    }

    <div class="row align-items-center">
        <!-- Left: Image -->
        <div class="col-md-6 mb-4 mb-md-0 text-center">
            <img src="/images/contact-us-image.png" alt="Contact Us" class="img-fluid rounded-4 shadow" style="max-height: 400px; object-fit: cover;" />
        </div>

        <!-- Right: Contact Form -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 p-4 rounded-4">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Full Name</label>
                        <input name="Name" class="form-control" placeholder="Enter your name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email Address</label>
                        <input name="Email" type="email" class="form-control" placeholder="Enter your email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Phone Number</label>
                        <input name="Phone" type="tel" class="form-control" placeholder="Enter your phone (optional)" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Message</label>
                        <textarea name="Message" class="form-control" rows="5" placeholder="Type your message here..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="fa fa-paper-plane me-1"></i> Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
