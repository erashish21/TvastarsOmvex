@model IEnumerable<TvastarsOmvex.Models.Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Our Projects</h2>
       @*  <a asp-action="Create" class="btn btn-success">
            <i class="fa fa-plus"></i> Add Project
        </a> *@
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No projects available.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var project in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@project.ImagePath" alt="@project.Title"
                             class="card-img-top" style="height:220px;object-fit:cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@project.Title</h5>
                            <p class="text-muted small">@project.ShortDescription</p>
                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@project.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fa fa-info-circle"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
