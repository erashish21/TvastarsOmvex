@model TvastarsOmvex.Models.Project
@{
    ViewData["Title"] = "Edit Project";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Edit Project</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label>Name</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Short Description</label>
            <input asp-for="ShortDescription" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Long Description</label>
            <textarea asp-for="LongDescription" class="form-control" rows="4"></textarea>
        </div>
        <div class="mb-3">
            <label>Current Image</label><br />
            <img src="@Model.ImagePath" width="120" class="rounded mb-2" />
            <input type="file" name="imageFile" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
