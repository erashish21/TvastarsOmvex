@model TvastarsOmvex.Models.Project
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-6">
            <h2 class="text-primary">@Model.Title</h2>
            <p class="text-muted">@Model.ShortDescription</p>
            <p>@Model.LongDescription</p>
        </div>
    </div>
</div>
