@model IEnumerable<TvastarsOmvex.Models.Project>
@{
    ViewData["Title"] = "Manage Projects";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa fa-project-diagram text-warning"></i> Manage Projects</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fa fa-plus"></i> Add New Project
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No projects found.</div>
    }
    else
    {
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Short Description</th>
                    <th>Created Date</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(project.ImagePath))
                            {
                                <img src="@project.ImagePath" width="80" class="rounded shadow-sm" />
                            }
                            else
                            {
                                <span class="text-muted">No image</span>
                            }
                        </td>
                        <td>@project.Title</td>
                        <td>@project.ShortDescription</td>
                        <td>@project.CreatedAt.ToString("dd-MMM-yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-primary btn-sm">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@project.Id"
                               onclick="return confirm('Are you sure you want to delete this project?');"
                               class="btn btn-danger btn-sm ms-2">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
